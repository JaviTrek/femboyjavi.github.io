            .main_container.main_hover  
                .main_item
                    .main_image
                    .main_text Experimentals
                    .main_subtext Choose your flavor of artillery

            .main_container.main_hover 
                .main_item
                    .main_image
                    .main_text Structures
                    .main_subtext Strong shields and chunky buildings

            .main_container.main_hover  
                .main_item
                    .main_image
                    .main_text Defenses
                    .main_subtext Only T3 Point Defense in the game
                    
            .main_container.main_hover  
                .main_item
                    .main_image
