                .main_item
                    .main_image
                        a(href="/HTML/UEFMain/UEFUnits.html")
                            img(src="/img/UEFLAND.png", alt="")  
                    .main_text  Land
                    .main_subtext Mechs and tanks with a lot of health

            .main_container.main_hover 
                .main_item
                    .main_image
                        img(src="/img/uefair.png", alt="")
                    .main_text Air
                    .main_subtext Fighter jets and the only T3 transport

            .main_container.main_hover 
                .main_item
                    .main_image
                        img(src="/img/uefnavy.png", alt="")
                    .main_text Navy
